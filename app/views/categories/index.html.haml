- button "/", "&lsaquo; Go back"

.box-theme-1
	.category-container-main.c
		.category-content
			%h2<
				= @category[:name]

				%span.subtle-text
					= "| #{@category[:catch_phrase]}"

			%p
				= @category[:description]

			%h3<
				Series:

			%ul.list-1-icons
				- @category[:series].each do |serie|
					%li.ce-scope

						.c
							%span.icon<
								%img{ :src => image_path(serie[:square_icon]), :alt => serie[:name] }/

							.l-portrait-item
								%h3
									- button "#", "#{serie[:name]} &rsaquo;", 'ce-trigger'

								%p
									= serie[:description]

						.box-theme-1.is-hidden.ce-target

							%ul.list-simple
								- serie[:goals].each do |goal|

									%li
										= goal[:title]

										%a.button-1-inline{ :href => "#{categories_path}/#{@category[:id]}/series/#{serie[:id]}/goals/#{goal[:id]}" }<
											Learn &rsaquo;

		.category-content.omega
			%img{ :src => image_path(@category[:main_image]), :alt => @category[:name] }/
