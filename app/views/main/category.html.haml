.box-theme-1
	.category-container-main.c
		.category-content
			%h2<
				= @category[:name]

				%span.subtle-text
					= "| #{@category[:catch_phrase]}"

			%p
				= @category[:description]

			%h3<
				Series:

			%ul.list-1-icons
				- @category[:series].each do |serie|
					%li.collapsed_
						.c
							%span.icon<
								%img{ :src => image_path(serie[:square_icon]), :alt => serie[:name] }/

							.l-portrait-item
								%h3
									%a.button-1{ :href => '#'}
										= serie[:name]
										&rsaquo;
								%p
									= serie[:description]

						.box-theme-1.is-hidden_
							hello

		.category-content.omega
			%img{ :src => image_path(@category[:main_image]), :alt => @category[:name] }/

%hr

%pre
	= @category